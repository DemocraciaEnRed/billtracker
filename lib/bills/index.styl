@import 'author'
@import 'bill-nav'
@import 'bills-stages-sidebar'

.bills
  .deletion
    background-color: rgba(251, 65, 106, .50)
    text-decoration: line-through

  .addition
    background-color: rgba(102, 235, 154, .50)

  .mdl-layout__content,
  .mdl-layout__header,
  .bill-title-container,
  .bill-body
    margin-left: auto !important
    margin-right: auto !important
    width: calc(100% - 480px) !important

    [bill-contents]
      font-size: .9rem

  .mdl-layout__header
    background-color: #eef1f6
    box-shadow: none
    border-bottom: 1px solid #d8dcdf

    h1
      color: #2b3245
      font-size: 2rem
      font-weight: bold
      text-transform: uppercase
      letter-spacing: .05rem
      margin-top: 30px
      margin-bottom: 31px

    .switch-container
      width: 100%
      text-align: center
      position: relative
      top: 13px

      .text
        color: rgb(178, 175, 184)
        font-size: .9rem
        margin: 0
        margin-bottom: 5px
        font-weight: 100

      .text-deactivate
        display: none

      &.active
        .text-deactivate
          display: block

        .text-activate
          display: none

      .mdl-switch__track
        background-color: rgb(178, 175, 184)

      .mdl-switch.is-checked .mdl-switch__track
        background-color: rgb(251, 206, 206)

      label
        transform: scale(1.3)
        width: auto
        right: 5px

.bills-author
  right: 0
  left: auto
  transform: translateX(0)

.addition
  background: lightgreen

.deletion
  background: red

.bill-body
  margin-top: 65px

  h3,
  h4,
  h5
    text-transform: uppercase
    font-weight: 700
    margin: 0
    letter-spacing: .03rem

  h3
    font-size: 1.7rem
    margin-bottom: 10px

  h4
    font-size: 1.2rem
    margin-bottom: 25px

  h5
    font-size: .9rem
    margin-bottom: 8px

  span
    font-size: .9rem
    margin-bottom: 4px
    font-weight: 400