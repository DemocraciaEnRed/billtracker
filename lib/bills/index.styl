@import 'author'
@import 'bill-nav'
@import 'bills-stages-sidebar'

.bills
  .mdl-layout__content,
  .mdl-layout__header,
  .bill-title-container,
  .bill-body
    margin-left: auto !important
    margin-right: auto !important
    width: 500px

  .mdl-layout__content
    width: 100%

  .mdl-layout__header
    background-color: #eef1f6
    box-shadow: none
    border-bottom: 1px solid #d8dcdf

    h1
      color: #2b3245
      font-size: 2rem
      font-weight: bold
      text-transform: uppercase
      letter-spacing: .05rem
      margin-top: 30px
      margin-bottom: 31px

    .switch-container
      width: 100%
      text-align: center
      position: relative
      top: 13px

      .text
        color: rgb(178, 175, 184)
        font-size: .9rem
        margin: 0
        margin-bottom: 5px
        font-weight: 100

      .text-deactivate
        display: none

      &.active
        .text-deactivate
          display: none

        .text-activate
          display: block

      .mdl-switch__track
        background-color: rgb(178, 175, 184)

      .mdl-switch.is-checked .mdl-switch__track
        background-color: rgb(251, 206, 206)

      label
        transform: scale(1.3)
        width: auto
        right: 5px

.bills-author
  right: 0
  left: auto
  transform: translateX(0)

.bill-body
  margin-top: 65px
  opacity: 1
  transition: opacity ease-out .5s

  &.loading
    transition-delay: .1s
    opacity: 0

  del
    text-decoration: line-through
    background-color: rgba(251, 65, 106, .50)

  ins
    text-decoration: none
    background-color: rgba(102, 235, 154, .50)

  h1,
  h2,
  h3,
  h4
    font-weight: 700
    margin: 0
    letter-spacing: .03rem
    line-height: 1.3

  h1
    font-size: 1.7rem
    margin-bottom: 30px

  h2
    font-size: 1.5rem
    margin-bottom: 15px

  h3
    font-size: 1.1rem
    margin-bottom: 10px

  h4
    font-size: 1.1rem
    margin-bottom: 10px
    font-weight: 400

  p + h1,
  p + h2,
  p + h3,
  p + h4
    margin-top: 30px

  p
    text-align: justify

@media screen and (max-width: 1024px)
  .mdl-layout--fixed-header > .mdl-layout__header
    width: 100%
