@import 'author'

.bills
  .bills-stages-sidebar
    background-color: #2b3245

    .mdl-layout-title
      padding: 48px 20px 0px 20px

    h1
      margin: 0
      padding: 0
      color: #fff
      font-weight: 700
      font-size: 2.75rem

    .mdl-navigation__link
      color: #fff

  .mdl-layout__content,
  .mdl-layout__header,
  .bill-title-container,
  .bill-body
    margin-left: auto !important
    margin-right: auto !important
    width: calc(100% - 480px) !important

  .mdl-layout__header
    background-color: #eef1f6
    box-shadow: none
    border-bottom: 1px solid #d8dcdf

    .bill-nav
      margin-top: 48px
      text-transform: uppercase
      display: flex
      justify-content: space-between

      small
        color: #b4babf

      .mdl-button:hover
        background-color: transparent
        color: #fb416a

      .mdl-button--icon
        border: none

      i.md-24
        transform: translateY(30%)

    h1
      color: #2b3245
      font-size: 2rem
      font-weight: bold
      text-transform: uppercase
      letter-spacing: .05rem
      margin-top: 30px
      margin-bottom: 31px

    .switch-container
      width: 100%
      text-align: center
      position: relative
      top: 13px

      .text
        color: rgb(178, 175, 184)
        font-size: .9rem
        margin: 0
        margin-bottom: 5px
        font-weight: 100

      .text-deactivate
        display: none

      &.active
        .text-deactivate
          display: block

        .text-activate
          display: none

      .mdl-switch__track
        background-color: rgb(178, 175, 184)

      .mdl-switch.is-checked .mdl-switch__track
        background-color: rgb(251, 206, 206)

      label
        transform: scale(1.3)
        width: auto
        right: 5px

.bills-author
  right: 0
  left: auto
  transform: translateX(0)

.addition
  background: lightgreen

.deletion
  background: red

.bill-body
  margin-top: 65px

  h3,
  h4,
  h5
    text-transform: uppercase
    font-weight: 700
    margin: 0
    letter-spacing: .03rem

  h3
    font-size: 1.7rem
    margin-bottom: 10px

  h4
    font-size: 1.2rem
    margin-bottom: 25px

  h5
    font-size: .9rem
    margin-bottom: 8px

  span
    font-size: .9rem
    margin-bottom: 4px
    font-weight: 400