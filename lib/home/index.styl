.home-cover
  height: 580px
  min-height: 80vh
  background-size: cover
  text-align: center

  h1.title
    font-weight: bold
    letter-spacing: 1px
    font-size: 5rem
    padding-top: 14%
    padding-top: 25vh

  p
    font-size: 1.2rem
    letter-spacing: 1px
    line-height: 23px
    max-width: 500px
    width: 100%
    margin: 0 auto

  a.mdl-button
    margin-top: 2%

  i
    color: #fb416a
    margin-top: 7%
    margin-top: 13vh
    animation: bounce 2s infinite

    @keyframes {bounce}
      0%, 20%, 50%, 80%, 100%
        transform: translateY(0);
      40%
        -webkit-transform: translateY(-30px)
        transform: translateY(-30px)
      60%
        -webkit-transform: translateY(-15px)
        transform: translateY(-15px)

.home-bills
  display: flex
  justify-content: center

  .bill-leg
    color: grey
    font-weight: 400
    display: block
    font-size: .8rem
    padding-bottom: 10px

  .mdl-card
    transition-delay: 0

    &:hover
      transition-delay: .15s

  .mdl-card__supporting-text strong
    color: #fb416a
    font-weight: 700
    display: block
    font-size 1rem
    padding-bottom: 30px

  .mdl-card__supporting-text
    flex-grow: 1

  .cards-width
    width: 380px
    margin: 1.6%

  .mdl-card__title
    flex-grow: 0

@media screen and (max-width: 479px)
  .mdl-card
      margin: 3% !important