@import 'node_modules/dialog-polyfill/dialog-polyfill.css'

.politician-modal
  box-sizing: border-box
  width: 100%
  max-width: 335px
  color: #2b3245
  border-radius: 10px

  .close
    display: block
    margin-left: auto
    color: #b4babf
    border: 0
    background-color: transparent

    &:hover
      color: #fb416a

    &:focus:not(:active)
      background-color: transparent

  .md-14
    font-size: 14px

  .politician-avatar
    text-align: center
    max-width: 255px
    margin: 0 auto

    .avatar
      margin: 0 auto
      background-size: cover
      width: 112px
      height: 112px

    h1
      text-transform: uppercase
      font-size: 1.3rem
      font-weight: 700
      letter-spacing: .03rem
      margin: 0
      margin-top: 20px
      margin-bottom: 2px

    p
      font-weight: 100
      line-height: 1.25rem
      font-size: .9rem

    .politician-state

      .md-7
        font-size: 7px
        color: #b5bac0

      p
        margin-bottom: 0px

      .party
        font-weight: 700

    .contact
      img
        margin: 20px 5%
        filter: grayscale(100%)
        opacity: 0.4
        transition: .3s ease-out

        &:hover
          filter: grayscale(0%)
          opacity: 1

  .politician-work
    background-color: #f6fafe
    margin-left: -1em
    margin-right: -1em
    margin-bottom: -2em
    border-bottom-left-radius: 10px
    border-bottom-right-radius: 10px
    padding: 25px 30px

    .divider
      width: 100%
      height: 1px
      background-color: #eff1f5
      margin: 15px 0

    h4
      text-transform: uppercase
      color: #2b3245
      font-size: 1rem
      letter-spacing: .05rem
      font-weight: 700
      margin: 0

    ul
      margin: 0

    li
      font-weight: 100
      font-size: .9rem